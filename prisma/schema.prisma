model Challenge {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  description String
  difficulty  Int
  testcases   Testcase[]
  Submission  Submission[]
}

model Testcase {
  id          Int       @id @default(autoincrement())
  challengeId Int
  input       String
  output      String
  Challenge   Challenge @relation(fields: [challengeId], references: [id])
}

model Submission {
  id          Int       @id @default(autoincrement())
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
  challengeId Int
  challenge   Challenge @relation(fields: [challengeId], references: [id])
  score       Float
  blockNumber Int
}
